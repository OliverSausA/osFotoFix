<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:osFotoFix.Views;assembly=osFotoFix"
             xmlns:models="clr-namespace:osFotoFix.Models;assembly=osFotoFix"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="osFotoFix.Views.FotoInfoListView">
  <Border Classes="View">
    <Grid RowDefinitions="Auto,*">
      <StackPanel 
        Grid.Row="0"
        Orientation="Horizontal"
        HorizontalAlignment="Center"
        >
        <Button Classes="cmd cmdRefresh"
          Command="{Binding RefreshCmd}"
          ToolTip.Tip="Fotos ganz neu einlesen"
          >
	        <DrawingPresenter Classes="cmd cmdRefresh"/>
        </Button>
        <Button Classes="cmd cmdCancel"
          Command="{Binding CancelCmd}"
          ToolTip.Tip="Hör auf, die ganzen Fotos zu laden"
          >
	        <DrawingPresenter Classes="cmd cmdCancel"/>
        </Button>
        <ContentControl
          VerticalAlignment="Center"
          Margin="2"
          Content="Event"
          />
        <TextBox
          Width="150"
          Text="{Binding UserSettingsVM.Title}"
          Watermark="Title"
          />
        <ContentControl
          VerticalAlignment="Center"
          Margin="2" Content="Beschreibung"
          />
        <TextBox
          Width="150"
          Text="{Binding UserSettingsVM.Description}"
          Watermark="Beschreibung"
          ToolTip.Tip="Wo kommen zum Beispiel die Bilder her?"
          />
        <Button Classes="cmd cmdundo"
          Command="{Binding UndoAllCmd}"
          ToolTip.Tip="Rückgängig"
          >
	        <DrawingPresenter Classes="cmd cmdundo"/>
        </Button>
        <Button Classes="cmd cmdtrash"
          ToolTip.Tip="Ab in den Papierkorb"
          IsEnabled="{Binding UserSettingsVM.TrashCmdActive}"
          IsVisible="{Binding UserSettingsVM.TrashCmdActive}"
          Command="{Binding TrashAllCmd}"
          >
          <DrawingPresenter Classes="cmd cmdtrash" />
        </Button>
        <Button Classes="cmd cmddelete"
          IsEnabled="{Binding UserSettingsVM.DelCmdActive}"
          IsVisible="{Binding UserSettingsVM.DelCmdActive}"
          Command="{Binding DelAllCmd}"
          ToolTip.Tip="Ich lösche alle Bilder. Soll ich?"
          >
	        <DrawingPresenter Classes="cmd cmddelete" />
        </Button>
        <Button Classes="cmd cmdmove"
          IsEnabled="{Binding UserSettingsVM.MoveCmdActive}"
          IsVisible="{Binding UserSettingsVM.MoveCmdActive}"
          ToolTip.Tip="Alle Bilder ins Ziel verschieben"
          Command="{Binding MoveAllCmd}"
          >
	        <DrawingPresenter Classes="cmd cmdmove" />
        </Button>
        <Button Classes="cmd cmdcopy"
          IsEnabled="{Binding UserSettingsVM.CopyCmdActive}"
          IsVisible="{Binding UserSettingsVM.CopyCmdActive}"
          ToolTip.Tip="Alle Bilder ins Ziel kopieren"
          Command="{Binding CopyAllCmd}"
          >
	        <DrawingPresenter Classes="cmd cmdcopy" />
        </Button>
        <Button Classes="cmd cmddoit"
          Content="DoIt"
          Command="{Binding DoItCmd}"
          ToolTip.Tip="Alle Bilder verarbeiten"
          >
	        <DrawingPresenter Classes="cmd cmddoit" />
        </Button>
      </StackPanel>
      <DataGrid
        Name="FotoList"
        Grid.Row="1"
        AutoGenerateColumns="False"
        Items="{Binding FotoInfoList}"
        SelectedItem="{Binding FotoSelected, Mode=TwoWay}"
        >
        <DataGrid.Columns>
        <DataGridTextColumn 
          Header="Verzeichnis"
          Binding="{Binding Foto.File.DirectoryName}"
        />
        <DataGridTextColumn 
          Header="Originalname"
          Binding="{Binding Foto.File.Name}"
        />
        <DataGridTextColumn 
          Header="Title"
          Binding="{Binding Title}"
        />
        <DataGridTextColumn 
          Header="Description"
          Binding="{Binding Description}"
        />
        <DataGridTextColumn
          Header="Aktion"
          Binding="{Binding Action}"
        />
        <DataGridTextColumn 
          Header="Exif"
          Binding="{Binding Foto.TypeOfCreationDate}"
          />
        <DataGridTextColumn
          Header="Doppelt"
          Binding="{Binding FileExistsOnTarget}"
          />
        <DataGridTextColumn
          Header="Erstelldatum"
          Binding="{Binding Foto.Created}"
          />
        <DataGridTextColumn 
          Header="Comment"
          Binding="{Binding Comment}"
          />
        <DataGridTextColumn
          Header="Datei"
          Binding="{Binding NewFileName}"
        />
        </DataGrid.Columns>
      </DataGrid>
    </Grid>
  </Border>
</UserControl>
