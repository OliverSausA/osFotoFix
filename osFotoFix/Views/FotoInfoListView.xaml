<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:osFotoFix.Views;assembly=osFotoFix"
             xmlns:models="clr-namespace:osFotoFix.Models;assembly=osFotoFix"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="osFotoFix.Views.FotoInfoListView">
  <Grid RowDefinitions="Auto,120,Auto">
    <TextBox Grid.Row="0" >
      Das bin ich
    </TextBox>
    <ListBox 
      Grid.Row="1"
      Items="{Binding FotoInfoList}" 
      >
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid ColumnDefinitions="32,*,*,32,32">
            <CheckBox Grid.Column="0" />
            <TextBox 
              Grid.Column="1" 
              Text="{Binding File.Name}"
              />
            <TextBox 
              Grid.Column="2" 
              Text="{Binding Created}"
              />
            <Button Grid.Column="3" />
            <Button Grid.Column="4" />
          </Grid>    
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <TextBox Grid.Row="2" >
      Und das auch
    </TextBox>
  </Grid>
</UserControl>
