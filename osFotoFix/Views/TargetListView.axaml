<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:osFotoFix.Views;assembly=osFotoFix"
             xmlns:vm="clr-namespace:osFotoFix.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:CompileBindings="True"
		         x:DataType="vm:TargetListViewModel"
             x:Class="osFotoFix.Views.TargetListView">
  <Design.DataContext>
    <vm:DesignTargetListViewModel/>
  </Design.DataContext>
  <StackPanel Orientation="Vertical">
    <ListBox
      ItemsSource="{Binding Targets}"
      SelectedItem="{Binding SelectedTarget}"
      >
      <ListBox.ItemTemplate>
        <DataTemplate x:DataType="vm:TargetVM">
          <Border 
            Background="Gainsboro"
            BorderBrush="Gray" 
            BorderThickness="2"
            BoxShadow="5 5 10 0 DarkGray"
            CornerRadius="3"
            Padding="5"
            Margin="0,0,0,-5"
            >
            <views:TargetView />
          </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</UserControl>
