<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:osFotoFix.Views;assembly=osFotoFix"
             xmlns:vm="clr-namespace:osFotoFix.ViewModels;assembly=osFotoFix"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="osFotoFix.Views.MainFotoView"
             x:DataType="vm:MainFotoViewModel"
             x:CompileBindings="True"
             >
  <Design.DataContext>
    <vm:DesignMainFotoViewModel/>
  </Design.DataContext>
  <Grid
    RowDefinitions="Auto,Auto,*"
    ColumnDefinitions="*">
      <DockPanel 
        HorizontalAlignment="Stretch"
        Margin="0,5,0,5"
        >
        <Button 
          DockPanel.Dock="Left"
          Content="..."
          Command="{Binding SelectPathCommand}"
          Width="30"
          Height="30"
          Margin="5,0,5,0"
          />
        <TextBlock VerticalAlignment="Center" 
          Margin="10" 
          DockPanel.Dock="Right">
          <Run Text="{Binding FotoInfoMarked}"/>
          <Run Text="/"/>
          <Run Text="{Binding FotoInfoList.Count}"/>
        </TextBlock>
        <TextBox Text="{Binding SourcePath}" />
      </DockPanel>
      <ProgressBar 
        Grid.Row="1"
        Minimum="0" Maximum="100"
        Value="{Binding Progress}" 
        Height="10"
        Margin="0,2,0,2"
        />
      <ListBox
          Grid.Row="2" Grid.Column="0"
          ScrollViewer.VerticalScrollBarVisibility="Visible"
          SelectedItem="{Binding FotoSelected, Mode=TwoWay}"
          ItemsSource="{Binding FotoInfoList}"
          DoubleTapped="ListBox_DoubleTapped"
          >
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Border 
                Background="Gainsboro"
                BorderBrush="Gray" 
                BorderThickness="2"
                BoxShadow="5 5 10 0 DarkGray"
                CornerRadius="3"
                Padding="5"
                Margin="0,0,0,-5"
                >
                <views:FotoInfoView />
              </Border>
            </DataTemplate>
          </ListBox.ItemTemplate>
      </ListBox>
  </Grid>
</UserControl>
