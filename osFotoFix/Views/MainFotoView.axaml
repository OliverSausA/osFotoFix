<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:osFotoFix.Views;assembly=osFotoFix"
             xmlns:viewmodels="clr-namespace:osFotoFix.ViewModels;assembly=osFotoFix"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="osFotoFix.Views.MainFotoView"
             x:DataType="viewmodels:MainFotoViewModel"
             x:CompileBindings="True"
             >
  <Grid
    ColumnDefinitions="*,Auto,*">
    <Grid
      RowDefinitions="*,Auto,*"
      >
      <views:FotoInfoListView
        Margin="0,5,5,0"
        Grid.Row="0"
        DataContext="{Binding FotoInfoListVM}"
        />
      <GridSplitter 
        Grid.Row="1"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"
        Background="Green" 
        Height="3"       
        />
      <views:ImageView
        Margin="0,0,5,5"
        Grid.Row="2"
        DataContext="{Binding ImageVM}"
        />
    </Grid>
    <GridSplitter 
      Grid.Column="1"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Center"
      Background="Green" 
      Width="3"       
      />
    <views:FotoPreviewView 
      Margin="5,5,0,5"
      Grid.Column="2"
      DockPanel.Dock="Right"
      DataContext="{Binding FotoPreviewListVM}"
      />
  </Grid>
</UserControl>
