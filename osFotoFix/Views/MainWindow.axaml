<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:osFotoFix.ViewModels;assembly=osFotoFix"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:osFotoFix.Views;assembly=osFotoFix"
        xmlns:viewmodels="clr-namespace:osFotoFix.ViewModels;assembly=osFotoFix"
        xmlns:models="clr-namespace:osFotoFix.Models;assembly=osFotoFix"
        xmlns:ic="using:FluentIcons.WinUI"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="osFotoFix.Views.MainWindow"
        x:CompileBindings="True"
		    x:DataType="viewmodels:DesignMainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="osFotoFix"
        >
  <Window.Resources>
    <views:IconNameToPath x:Key="IconNameToPath" />
  </Window.Resources>
  <Window.Styles>
   <Style Selector=":is(Window)">
     <Setter Property="FontSize" Value="{Binding SettingsVM.GeneralFontSize}"/>
   </Style>
  </Window.Styles>
  <Design.DataContext>
    <viewmodels:DesignMainWindowViewModel/>
  </Design.DataContext>
  <Grid 
    ColumnDefinitions="Auto,*"
    RowDefinitions="30,*"
    >
    <TextBox Grid.ColumnSpan="2" Text="MainMenu" />
    <!-- Navigation -->
    <ItemsControl Grid.Row="1"
                  ItemsSource="{Binding NavigationList}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Border 
            Margin="0,10,0,0"
            CornerRadius="5"
            Background="Gray"
            BorderBrush="Gray">
            <Button
              Command="{Binding Command}" >
              <StackPanel 
                Orientation="Horizontal" >
                <PathIcon 
                  Margin="10,0"
                  Data="{Binding IconName, Converter={StaticResource IconNameToPath}}" />
                <TextBlock 
                  Text="{Binding Title}" 
                  />
              </StackPanel>
            </Button>
          </Border>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>

    <ContentControl 
      Grid.Column="1" Grid.Row="1"
      Content="{Binding MainViewModel}" />

  </Grid>

</Window>
