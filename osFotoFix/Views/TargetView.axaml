<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ic="using:FluentIcons.Avalonia"
             xmlns:views="clr-namespace:osFotoFix.Views"
             xmlns:vm="clr-namespace:osFotoFix.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="140"
             x:CompileBindings="True"
		         x:DataType="vm:TargetViewModel"
             x:Class="osFotoFix.Views.TargetView">
  <UserControl.Resources>
    <views:BitmapFileValueConverter x:Key="FotoImage" />
    <views:EActionCompareConverter x:Key="EActionCompare" />
    <views:ActionColorValueConverter x:Key="ActionColor" />
    <views:ActionBitmapValueConverter x:Key="ActionImage" />
    <views:IconNameToPath x:Key="IconNameToPath" />
    <views:ActionIconValueConverter x:Key="ActionIcon" />
  </UserControl.Resources>
  <Design.DataContext>
    <vm:DesignTargetViewModel/>
  </Design.DataContext>
  <Grid 
      RowDefinitions="Auto,Auto,Auto,Auto"
      ColumnDefinitions="Auto,*,Auto,Auto">
    <CheckBox 
        Grid.ColumnSpan="2"
        Content="Active"
        IsChecked="{Binding Target.Enabled}"
        IsEnabled="{Binding IsPathValid}"
        />
    <Button
        Grid.Row="0" Grid.Column="4"
        Content="X"
        Command="{Binding RemoveCommand}" />
    <ic:FluentIcon 
        Grid.Row="1" Grid.Column="0"
        IconSize="Size32"
        Icon="{Binding IconName}" 
        Background="{Binding IconColor}"
        />
    <ColorPicker
        Grid.Row="2"
        HsvColor="{Binding HsvColor}" />
    <TextBox 
        Grid.Row="3" Grid.Column="0"
        Watermark="Icon"
        Text="{Binding IconName}"
        />
    <TextBox 
        Grid.Row="1" Grid.Column="1"
        Watermark="Title"
        Text="{Binding Target.Title}"
        />
    <ComboBox
        Grid.Row="1" Grid.Column="2"
        Width="200"
        ItemsSource="{Binding ActionList}"
        SelectedItem="{Binding Action, Mode=TwoWay}">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <ic:FluentIcon 
                IconSize="Size32"
                Icon="{Binding Value, Converter={StaticResource ActionIcon}}" 
                Margin="0,0,10,0"/>
            <TextBlock Text="{Binding Title}"/>
          </StackPanel>
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
    <TextBox 
        Grid.Row="2" Grid.Column="1"
        Grid.ColumnSpan="2" 
        Watermark="Description"
        Text="{Binding Target.Description}"
        />
    <TextBox 
        Grid.Row="3" Grid.Column="1"
        Grid.ColumnSpan="2" 
        Watermark="Path"
        Text="{Binding Path}"
        />
    <Button
        Grid.Row="3" Grid.Column="4"
        Content="..."
        Command="{Binding SelectPathCommand}"/>
  </Grid>
</UserControl>
