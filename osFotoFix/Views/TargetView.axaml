<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:osFotoFix.Views;assembly=osFotoFix"
             xmlns:vm="clr-namespace:osFotoFix.ViewModels;assembly=osFotoFix"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="120"
             x:CompileBindings="True"
		         x:DataType="vm:TargetVM"
             x:Class="osFotoFix.Views.TargetView">
  <UserControl.Resources>
    <views:BitmapFileValueConverter x:Key="FotoImage" />
    <views:EActionCompareConverter x:Key="EActionCompare" />
    <views:ActionColorValueConverter x:Key="ActionColor" />
    <views:ActionBitmapValueConverter x:Key="ActionImage" />
    <views:IconNameToPath x:Key="IconNameToPath" />
  </UserControl.Resources>
  <Design.DataContext>
    <vm:DesignTargetVM/>
  </Design.DataContext>
  <Grid 
      RowDefinitions="Auto,Auto,Auto"
      ColumnDefinitions="50,*,Auto,Auto">
    <CheckBox 
        Grid.ColumnSpan="2"
        Content="Active"
        IsChecked="{Binding Target.Enabled}"/>
    <Image Width="20" Grid.RowSpan="2"
      Grid.Row="1" Grid.Column="0">
      <DrawingImage
        Drawing="{Binding IconName, Converter={StaticResource IconNameToPath}}" />
    </Image>
    <TextBox 
        Grid.Row="1" Grid.Column="1"
        Watermark="Title"
        Text="{Binding Target.Title}"
        />
    <ComboBox
        Grid.Row="1" Grid.Column="2"
        Width="200"
        ItemsSource="{Binding ActionList}"
        SelectedItem="{Binding Action, Mode=TwoWay}">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Title}"/>
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
    <TextBox 
        Grid.Row="2" Grid.Column="1"
        Grid.ColumnSpan="2" 
        Watermark="Path"
        Text="{Binding Target.Path}"
        />
    <Button
        Grid.Row="0" Grid.Column="4"
        Content="X"
        Command="{Binding RemoveCommand}" />
    <Button
        Grid.Row="2" Grid.Column="4"
        Content="..."/>
  </Grid>
</UserControl>
