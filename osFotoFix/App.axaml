<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:osFotoFix"
             x:Class="osFotoFix.App"
             RequestedThemeVariant="Default">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
      <FluentTheme />
      <StyleInclude Source='/Assets/Modern.xaml'/>
      <StyleInclude Source='/Assets/FluentUiIcons_Filled.xaml'/>
      <StyleInclude Source='/Assets/FluentUiIcons_Regular.xaml'/>
      <StyleInclude Source='/Assets/Custom.xaml'/>
    </Application.Styles>
    <Application.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceInclude Source="/Assets/StrRes.de-DE.xaml" />
          <ResourceInclude Source="/Assets/StrRes.en-US.xaml" />
          <ResourceInclude Source="/Assets/StrRes.xaml" />
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
      <SolidColorBrush x:Key="Cancel">#7F7FFF</SolidColorBrush>
      <SolidColorBrush x:Key="Warning">#FFF77F</SolidColorBrush>
      <SolidColorBrush x:Key="Alert">#FF7F7F</SolidColorBrush>
      <SolidColorBrush x:Key="OK_Color">#7FFF7F</SolidColorBrush>
    </Application.Resources>
</Application>
